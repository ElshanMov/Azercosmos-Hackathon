# Urban Infrastructure Lens - Environment Configuration
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urban_lens
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=urban_lens

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# STAC Settings
STAC_API_TITLE=Urban Infrastructure Lens STAC API
STAC_API_DESCRIPTION=Baku City Infrastructure Catalog
STAC_API_VERSION=1.0.0

# Map Settings
DEFAULT_CENTER_LAT=40.4093
DEFAULT_CENTER_LON=49.8671
DEFAULT_ZOOM=14

# Demo Area Bounding Box (Icheri Sheher / Fountain Square area)
DEMO_BBOX_MIN_LON=49.8300
DEMO_BBOX_MIN_LAT=40.3650
DEMO_BBOX_MAX_LON=49.8550
DEMO_BBOX_MAX_LAT=40.3750
